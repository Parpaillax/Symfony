{% extends 'main/base.html.twig' %}
{% block head %}
    <head>
        <meta charset="UTF-8">
        <title>Bucket-List</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
{% endblock %}

{%block content %}
    <div class="flex justify-center items-center py-52">
        <div class="bg-white shadow-lg rounded-lg p-8 max-w-md text-center">
            <img src="{{ asset('img/logo-512.png') }}" alt="Logo" class="h-28 mx-auto mb-4">
            <h3 class="text-2xl font-bold text-center pb-3">Créer une nouvelle liste</h3>
            <p class="text-gray-700 text-justify mb-4">Vous pouvez créer une liste de voeux facilement depuis mon application web ! Cliquer sur le bouton juste en dessous pour continuer</p>
            <button type="button" class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded mx-auto">
                <a href="/wish/new">Créer liste</a>
            </button>
        </div>
    </div>
{% endblock %}
